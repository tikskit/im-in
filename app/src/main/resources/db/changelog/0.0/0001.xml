<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
  http://www.liquibase.org/xml/ns/pro
  http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="0001" author="tikskit">
        <sql dbms="postgresql, mssql, h2" endDelimiter=";">
            CREATE SCHEMA events
        </sql>
    </changeSet>
    <changeSet id="0002" author="tikskit">
        <sql dbms="postgresql, mssql, h2" endDelimiter=";">
            CREATE SCHEMA security
        </sql>
    </changeSet>
    <changeSet id="0003" author="tikskit">
        <sql dbms="postgresql, mssql, h2" endDelimiter=";">
            CREATE SCHEMA actors
        </sql>
    </changeSet>

    <changeSet id="0004" author="tikskit">
        <createTable tableName="organizers" schemaName="actors">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="organizers_pk"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0005" author="tikskit" dbms="h2">
        <createTable tableName="events" schemaName="events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="events_pk"/>
            </column>
            <column name="organizer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="datetime" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="country" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(255)"/>
            <column name="county" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="building" type="VARCHAR(10)"/>
            <column name="flat" type="VARCHAR(10)"/>
            <column name="extra" type="VARCHAR(255)"/>

            <column name="geo" type="GEOMETRY"/>

            <column name="uri" type="VARCHAR"/>

            <column name="placetype" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0005" author="tikskit" dbms="postgresql">
        <createTable tableName="events" schemaName="events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="events_pk"/>
            </column>
            <column name="organizer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="datetime" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="INTEGER">
                <constraints nullable="false"/>
            </column>

            <column name="country" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(255)"/>
            <column name="county" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="street" type="VARCHAR(255)"/>
            <column name="building" type="VARCHAR(10)"/>
            <column name="flat" type="VARCHAR(10)"/>
            <column name="extra" type="VARCHAR(255)"/>

            <column name="geo" type="GEOGRAPHY(POINT,4326)"/>
<!--            <column name="geo" type="GEOMETRY"/>-->

            <column name="uri" type="VARCHAR"/>

            <column name="placetype" type="INTEGER">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0006" author="tikskit">
        <addForeignKeyConstraint baseTableName="events" baseColumnNames="organizer_id" baseTableSchemaName="events"
                                 referencedTableName="organizers" referencedColumnNames="id" referencedTableSchemaName="actors"
                                 constraintName="fk_events_organizers"
                                 onUpdate="CASCADE" onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="0007" author="tikskit">
        <sql dbms="postgresql, mssql, h2">
            ALTER TABLE events.events
            ADD CONSTRAINT ck_placetype
            CHECK(
                (placetype = 0 AND country IS NOT NULL AND state IS NOT NULL AND city IS NOT NULL AND street IS NOT NULL
                    AND building IS NOT NULL)
                OR (placetype = 1 AND geo IS NOT NULL) OR (placetype = 2 AND uri IS NOT NULL)
            );
        </sql>
    </changeSet>
    <changeSet id="0008" author="tikskit">
        <sql dbms="postgresql, mssql, h2">
            ALTER TABLE events.events
            ADD CONSTRAINT ck_status
            CHECK(
                status in (0, 1, 2)
            );
        </sql>
    </changeSet>

    <changeSet id="0009" author="tikskit">
        <createTable tableName="tags" schemaName="events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_tags"/>
            </column>
            <column name="tag" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0010" author="tikskit">
        <createTable tableName="events_tags" schemaName="events">
            <column name="event_id" type="BIGINT"/>
            <column name="tag_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="0011" author="tikskit">
        <createIndex tableName="events_tags" schemaName="events" indexName="ix_event_id_tag_id" unique="true">
            <column name="event_id">
                <constraints nullable="false" notNullConstraintName="c_event_id_not_null"/>
            </column>
            <column name="tag_id">
                <constraints nullable="false" notNullConstraintName="c_tag_id_not_null"/>
            </column>
        </createIndex>
    </changeSet>

    <changeSet id="0012" author="tikskit">
        <addForeignKeyConstraint baseTableName="events_tags" baseColumnNames="event_id" baseTableSchemaName="events"
                                 referencedTableName="events" referencedColumnNames="id" referencedTableSchemaName="events"
                                 constraintName="fk_events_tags_event_id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="0013" author="tikskit">
        <addForeignKeyConstraint baseTableName="events_tags"
                                 baseColumnNames="tag_id" constraintName="fk_events_tags_tag_id" baseTableSchemaName="events"
                                 referencedTableName="tags" referencedColumnNames="id" referencedTableSchemaName="events"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="0014" author="tikskit">
        <createTable tableName="users" schemaName="security">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="users_pk"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" notNullConstraintName="c_username_not_null"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false" notNullConstraintName="c_password_not_null"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0015" author="tikskit">
        <createIndex tableName="users" schemaName="security" indexName="ix_username" unique="true">
            <column name="username"/>
        </createIndex>
    </changeSet>

    <changeSet id="0016" author="tikskit">
        <createTable tableName="roles" schemaName="security">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="roles_pk"/>
            </column>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false" notNullConstraintName="c_role_not_null"
                             unique="true" uniqueConstraintName="c_role_unique"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0017" author="tikskit">
        <createTable tableName="users_roles" schemaName="security">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" notNullConstraintName="c_user_id_not_null"/>
            </column>
            <column name="role_id" type="BIGINT">
                <constraints nullable="false" notNullConstraintName="c_role_id_not_null"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="0018" author="tikskit">
        <createIndex tableName="users_roles" schemaName="security" indexName="ix_user_id_role_id" unique="true">
            <column name="user_id"/>
            <column name="role_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="0019" author="tikskit">
        <sql dbms="postgresql, mssql" endDelimiter=";">
            CREATE INDEX ix_address ON events.events (country, city, street) WHERE placetype = 0
        </sql>
    </changeSet>

    <changeSet id="0020" author="tikskit">
        <sql dbms="h2" endDelimiter=";">
            CREATE ALIAS IF NOT EXISTS H2GIS_SPATIAL FOR "org.h2gis.functions.factory.H2GISFunctions.load";
            CALL H2GIS_SPATIAL();
        </sql>
    </changeSet>

</databaseChangeLog>